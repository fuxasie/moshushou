<Window x:Class="moshushou.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:moshushou"
        mc:Ignorable="d"
        Title="快递处理器 0.62" Height="480" Width="360"
        MinHeight="300" MinWidth="300"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- TreeView样式优化 - 增强选中效果 -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="Margin" Value="0,1"/>
            <!-- 关键：使用艳丽的深色让失焦时的选中项更醒目 -->
            <Style.Resources>
                <!-- 窗口激活时的选中背景 - 鲜艳的蓝色 -->
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#0078D4"/>
                <!-- 窗口激活时的选中文字 -->
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                <!-- 窗口失焦时的选中背景 - 艳丽的深紫色 -->
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#6B46C1"/>
                <!-- 窗口失焦时的选中文字 -->
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
            </Style.Resources>
            <!-- 添加触发器确保选中时文字变白 -->
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 现代化按钮样式 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="2" 
                                                        BlurRadius="8" 
                                                        Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.75"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 图标按钮样式 -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="36"/>
            <Setter Property="MinHeight" Value="32"/>
        </Style>

        <!-- 现代化复选框样式 -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="6,0,0,0"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- 折叠按钮样式 -->
        <Style x:Key="ToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinWidth" Value="36"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EDF2F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 渐变背景 -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#F7FAFC" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Border CornerRadius="8" 
            Margin="0"
            Background="White">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.15"/>
        </Border.Effect>

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 顶部工具栏 - 现代化设计 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource HeaderGradient}"
                    BorderBrush="#E2E8F0" 
                    BorderThickness="0,0,0,1"
                    CornerRadius="4,4,0,0"
                    Padding="8,6"
                    Margin="0,0,0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左侧操作按钮 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button x:Name="LoadExcelButton" 
                                Content="📂" 
                                ToolTip="加载Excel文件 (Ctrl+O)"
                                Background="#10B981"
                                Style="{StaticResource IconButton}"
                                Click="LoadExcelButton_Click"/>

                        <Button x:Name="OpenFolderButton" 
                                Content="📁" 
                                ToolTip="打开文件目录 (Ctrl+D)"
                                Background="#3B82F6"
                                Margin="4,0,0,0"
                                Style="{StaticResource IconButton}"
                                Click="OpenFolderButton_Click"/>


                        
                        <Button x:Name="EditBusInfoButton" 
                         Content="✏️" 
                         ToolTip="编辑商家群聊信息"
                         Background="#F59E0B"
                           Margin="4,0,0,0"
                        Style="{StaticResource IconButton}"
                         Click="EditBusInfoButton_Click"/>

                        <!-- 折叠筛选栏按钮 -->
                        <ToggleButton x:Name="FilterToggleButton"
                                      Content="🔍"
                                      ToolTip="显示/隐藏筛选栏"
                                      Margin="6,0,0,0"
                                      FontSize="14"
                                      Style="{StaticResource ToggleButton}"
                                      Checked="FilterToggleButton_Checked"
                                      Unchecked="FilterToggleButton_Unchecked"/>
                    </StackPanel>

                    <!-- 右侧选项 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <CheckBox x:Name="AlwaysOnTopCheckBox"
                                  Content="📌 置顶"
                                  Style="{StaticResource ModernCheckBox}"
                                  Checked="AlwaysOnTopCheckBox_Checked"
                                  Unchecked="AlwaysOnTopCheckBox_Unchecked"/>

                        <CheckBox x:Name="AutoSendCheckBox"
                                  Content="⚡ 自动发送"
                                  Margin="12,0,0,0"
                                  Style="{StaticResource ModernCheckBox}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 可折叠的筛选栏 - 现代化卡片设计 -->
            <Border x:Name="FilterPanel"
                    Grid.Row="1" 
                    Margin="0,0,0,4"
                    Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="10"
                    Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" 
                                    BlurRadius="6" 
                                    Opacity="0.1"
                                    Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 筛选说明 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="🏪"
                                   FontSize="12"
                                   Margin="0,0,4,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="商家名筛选"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#2D3748"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="（每行一个，支持多行）"
                                   FontSize="9"
                                   Foreground="#718096"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 筛选输入区 -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                CornerRadius="4"
                                Background="#F7FAFC">
                            <TextBox x:Name="FilterTextBox"
                                     Height="60"
                                     FontSize="11"
                                     Padding="6,4"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     ToolTip="支持多行输入，按回车换行"/>
                        </Border>

                        <Button Grid.Column="1"
                                x:Name="ApplyFilterButton"
                                Content="✓ 筛选"
                                Margin="6,0,0,0"
                                Background="#10B981"
                                Padding="14,6"
                                Style="{StaticResource ModernButton}"
                                Click="ApplyFilterButton_Click"/>

                        <Button Grid.Column="2"
                                x:Name="ClearFilterButton"
                                Content="✕ 清除"
                                Margin="4,0,0,0"
                                Background="#6B7280"
                                Padding="14,6"
                                Style="{StaticResource ModernButton}"
                                Click="ClearFilterButton_Click"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- TreeView - 增强视觉效果和字体 -->
            <Border Grid.Row="2" 
                    BorderBrush="#E2E8F0" 
                    BorderThickness="1"
                    CornerRadius="6"
                    Background="White">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" 
                                    BlurRadius="6" 
                                    Opacity="0.08"
                                    Color="#000000"/>
                </Border.Effect>

                <TreeView x:Name="StoreTreeView"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Recycling"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          Background="Transparent"
                          Padding="6"
                          BorderThickness="0">
                    <!-- 
                        *** TreeView 主模板已改造 *** 
                        现在，每个商家项由一个包含两行文本的StackPanel组成，
                        第二行用于显示来源和群名。
                    -->
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <Grid Margin="0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 左侧内容区：包含商家名和群信息 -->
                                <Border Grid.Column="0"
                                        Background="Transparent"
                                        CornerRadius="4"
                                        Padding="4,3"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="TreeViewItem_MouseLeftButtonDown"
                                        MouseMove="TreeViewItem_MouseMove">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#EFF6FF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel VerticalAlignment="Center">
                                        <!-- 第一行：商家名和数量 -->
                                        <TextBlock Text="{Binding Header}"
                                                   FontWeight="SemiBold"
                                                   FontSize="13">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#1A202C"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsSelected}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- 第二行：来源和群名 (仅当存在时显示) -->
                                        <TextBlock Text="{Binding GroupInfo}"
                                                   FontSize="10.5"
                                                   FontWeight="Medium"
                                                   Visibility="{Binding HasGroupInfoVisibility}"
                                                   Margin="0,1,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#4A5568"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsSelected}" Value="True">
                                                            <Setter Property="Foreground" Value="#E2E8F0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- 右侧：删除按钮 -->
                                <Button Grid.Column="1"
                                        Content="×"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Padding="6,2"
                                        Margin="4,0,0,0"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        ToolTip="删除此商家"
                                        Click="DeleteStoreButton_Click"
                                        Tag="{Binding StoreName}"
                                        Background="Transparent"
                                        BorderThickness="0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Foreground" Value="#EF4444"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                            Background="{TemplateBinding Background}" 
                                                            Padding="{TemplateBinding Padding}"
                                                            CornerRadius="3">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#FEE2E2"/>
                                                            </Trigger>
                                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsSelected}" Value="True">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <!-- 快递单号子项模板 (保持不变) -->
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="16,3,4,3" 
                                            Margin="0,1"
                                            Background="Transparent"
                                            CornerRadius="3">
                                        <TextBlock Text="{Binding Text}" 
                                                   FontSize="11.5"
                                                   FontFamily="Consolas, Courier New"
                                                   Cursor="Hand"
                                                   Padding="4,2"
                                                   MouseLeftButtonDown="TrackingNumber_MouseLeftButtonDown"
                                                   ToolTip="点击复制单号">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="#4A5568"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsSelected}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                        <GradientStop Color="#FEF3C7" Offset="0"/>
                                                                        <GradientStop Color="#FDE68A" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="Foreground" Value="#92400E"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>

            <!-- 状态栏 - 现代化设计 -->
            <Border Grid.Row="3" 
                    Margin="0,4,0,0" 
                    Background="{StaticResource HeaderGradient}"
                    BorderBrush="#E2E8F0" 
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,4,4"
                    Padding="8,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="●"
                               FontSize="10"
                               Foreground="#10B981"
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                               x:Name="StatusTextBlock" 
                               Text="就绪" 
                               FontSize="10"
                               FontWeight="Medium"
                               Foreground="#4A5568"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>